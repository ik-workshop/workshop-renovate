# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 150

[*.{sh,html,bash,bats}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_style = space
indent_size = 2